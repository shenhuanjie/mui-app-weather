body,
.mui-content {
	display: flex;
	min-height: 542px;
	width: 100%;
}

.box-item,
.box-group {
	text-align: center;
	justify-content: space-around;
}

.box-group__weather {
	width: 700px;
	display: flex;
	flex-direction: column;
	justify-content: center;
}

.box-group__weather .box-group {
	display: flex;
	padding: 30px 15px 30px 15px;
	margin: 0 0 0 30px;
	border: 1px solid #dad7d5;
	border-radius: 5px;
	background: white;
}

.box-group__temperature {
	display: flex;
	border: 1px solid rgb(218, 215, 213);
	border-radius: 5px;
	background: white;
	width: 300px;
	display: flex;
	flex-direction: column;
	justify-content: space-evenly;
	border: 1px solid #d3d0cc;
	margin: 50px 30px 50px 10px;
	border-radius: 5px;
}

.mui-bar {
	background-color: #5fce72;
	color: #fff;
}

.mui-bar .mui-title {
	color: #fff;
}

.mui-icon-back:before,
.mui-icon-left-nav:before {
	color: #fff;
}

.font-black {
	color: #504533;
}

.font-green {
	color: #0080009e;
}